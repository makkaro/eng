{
    "source": {
        "include": ["admin", "ctl", "lib", "models", "routes"],
        "includePattern": ".js$",
        "exclude": ["docs", "node_modules"]
    },
    "sourceType": "script",
    "plugins": ["plugins/markdown"],
    "opts": {
        "destination": "docs/",
        "recurse": true,
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "light",
            "menu": [
                {
                    "title": "Github repository",
                    "link": "https://github.com/makkaro/eng"
                }
            ]
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}