{
    "source": {
        "include": ["ctl", "lib", "models", "routes"],
        "includePattern": ".js$",
        "exclude": ["docs", "node_modules"]
    },
    "sourceType": "script",
    "plugins": ["plugins/markdown"],
    "opts": {
        "destination": "docs/",
        "recurse": true,
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "light"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}